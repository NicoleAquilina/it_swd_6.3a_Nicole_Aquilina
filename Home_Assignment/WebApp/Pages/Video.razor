@page "/videolist"
@using WebApp.Models
@inherits VideoBase

@if(Genre == null)
{
	<h3> Loading Genre ... </h3>
}
else
{
    <div style="max-width: 400px; margin: 20px 0; padding: 15px; border: 1px solid #ddd; border-radius: 5px; background-color: #f9f9f9;">
        <h3 style="font-size: 1.5rem; margin-bottom: 10px; color: #333; font-family: Arial, sans-serif;">Select a Genre</h3>
        <select style="width: 100%; padding: 10px; font-size: 1rem; border-radius: 5px; border: 1px solid #ccc; background-color: #fff; font-family: Arial, sans-serif; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); transition: border-color 0.3s;" @onchange="OnGenreChange">
            <option value="">-- Select a Genre --</option>
            @if (Genre != null)
            {
                @foreach (var genre in Genre)
                {
                    <option value="@genre">@genre</option>
                }
            }
        </select>
    </div>
    <p>Selected Genre: @SelectedGenre</p>

    @if (Videos != null && Videos.Any())
    {
		var VideoCount = Videos.Count();

		@if (VideoCount > 0)
		{
			const int productsPerRow = 3;
			var videosRowList = new List<VideoModel>();

			@for (int i = 0; i < VideoCount; i++)
			{
				videosRowList = Videos.Skip(i * productsPerRow).Take(productsPerRow).ToList();

                <div class="row mt-3">
                    @foreach (var item in videosRowList)
                    {
                        if(@item.PictureURI == null)
                        {
                            <div class="col-md-4 mb-3">
                                <div style="border: 1px solid #ddd; border-radius: 5px; overflow: hidden; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                                    <img src="https://upload.wikimedia.org/wikipedia/en/thumb/1/14/Coverdvdcover.jpg/220px-Coverdvdcover.jpg" alt="@item.Title" style="width: 100%; height: 200px; object-fit: cover;" />
                                    <div class="card-body">
                                        <h5 style="font-size: 1rem; margin-bottom: 5px; font-weight: bold;">@item.Title</h5>
                                        <p style="font-size: 0.9rem; margin-bottom: 0; color: #666;">Year Released : @item.ReleaseYear</p>
                                         <button @onclick="() => PlaceOrder(item.Id)" class="btn btn-primary">Place Order</button>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                             <div class="col-md-4 mb-3">
                                <div style="border: 1px solid #ddd; border-radius: 5px; overflow: hidden; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                                    <img src="@item.PictureURI" alt="@item.Title" style="width: 100%; height: 200px; object-fit: cover;" />
                                    <div class="card-body">
                                        <h5 style="font-size: 1rem; margin-bottom: 5px; font-weight: bold;">@item.Title</h5>
                                        <p style="font-size: 0.9rem; margin-bottom: 0; color: #666;">Year Released : @item.ReleaseYear</p>
                                        <div style="margin-top: 10px;">
                                            <button @onclick="() => PlaceOrder(item.Id)" class="btn btn-primary">Place Order</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
			}
		}
	}
}

@code{

    public void PlaceOrder(string videoId)
    {
        NavigationManager.NavigateTo($"/order/{videoId}");
    }
}
